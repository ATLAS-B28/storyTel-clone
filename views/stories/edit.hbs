<h3>Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" class="col s12" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <!---value here refers to new value of method and name set to _method refering to the method tag -->
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}" id="title">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your stroy:</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>